#!/bin/bash

source "bin/source.sh"

submodule_path="app-submodule"

git submodule add "https://github.com/labscriptdev/app.git" $submodule_path

for sync_file in "${sync_files[@]}"; do
  echo ""
  echo "copy: $sync_file"
  echo "to    $submodule_path/$sync_file"
  cp $sync_file "$submodule_path/$sync_file"
done

cd $submodule_path
git add .
git commit -m "$1"
git push

git submodule deinit -f $submodule_path
rm -rf ".git/modules/$submodule_path"
git rm -f $submodule_path