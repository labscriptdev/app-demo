#!/bin/bash

source "bin/source.sh"

submodule_path="_app-submodule"

git submodule add "https://github.com/labscriptdev/app.git" _app-submodule

for sync_file in "${sync_files[@]}"; do
  echo "copy $sync_file"
  echo "to $submodule_path/$sync_file"
  echo ""
  cp $sync_file "$submodule_path/$sync_file"
done

cd submodule_path
git add .
git commit -m $1
git push origin HEAD

git submodule deinit -f _app-submodule
rm -rf .git/modules/_app-submodule
git rm -f _app-submodule